  <div class="search-form">
    <%= form_with url: books_path, method: :get, local: true, class: "search-form-inner" do |form| %>
      <%= form.label :query, "„Çø„Ç§„Éà„É´„ÉªËëóËÄÖÂêç„ÉªISBN", class: "search-label" %>
      <div class="search-input-wrapper"
           data-controller="autocomplete"
           data-autocomplete-url-value="<%= suggestions_books_path %>">
        <%= form.text_field :query,
                            value: @query,
                            placeholder: "‰æãÔºöÂêæËº©„ÅØÁå´„Åß„ÅÇ„Çã",
                            class: "search-input",
                            data: {
                              autocomplete_target: "input",
                              barcode_scanner_target: "input"
                            },
                            autocomplete: "off" %>
        <ul class="autocomplete-results" data-autocomplete-target="results"></ul>
      </div>
      <%= form.submit "Ê§úÁ¥¢", class: "btn btn-primary" %>
      <button type="button"
              class="btn btn-barcode"
              data-action="click->barcode-scanner#startScan">
        üì∑ „Éê„Éº„Ç≥„Éº„Éâ
      </button>
    <% end %>
  </div>

  <!-- „Éê„Éº„Ç≥„Éº„Éâ„Çπ„Ç≠„É£„Éä„Éº„É¢„Éº„ÉÄ„É´ -->
  <div class="barcode-modal" data-barcode-scanner-target="modal">
    <div class="barcode-modal-content">
      <div class="barcode-modal-header">
        <h2>„Éê„Éº„Ç≥„Éº„Éâ„Çπ„Ç≠„É£„É≥</h2>
        <button type="button"
                class="barcode-modal-close"
                data-action="click->barcode-scanner#closeModal">
          √ó
        </button>
      </div>
      <div class="barcode-scanner-container">
