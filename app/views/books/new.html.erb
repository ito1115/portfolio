<div class="container">
  <div class="header">
    <h1>手動で本を追加</h1>
    <%= link_to "検索に戻る", books_path, class: "btn btn-secondary" %>
  </div>

  <%= form_with model: @book, local: true, class: "book-form" do |form| %>
    <% if @book.errors.any? %>
      <div class="error-messages">
        <h3><%= @book.errors.count %>件のエラーがあります:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :title, "タイトル", class: "form-label required" %>
      <%= form.text_field :title, class: "form-control", placeholder: "本のタイトルを入力", required: true %>
    </div>

    <div class="form-group">
      <%= form.label :author, "著者", class: "form-label" %>
      <%= form.text_field :author, class: "form-control", placeholder: "著者名を入力" %>
    </div>

    <div class="form-group">
      <%= form.label :publisher, "出版社", class: "form-label" %>
      <%= form.text_field :publisher, class: "form-control", placeholder: "出版社名を入力" %>
    </div>

    <div class="form-row">
      <div class="form-group half">
        <%= form.label :published_date, "出版日", class: "form-label" %>
        <%= form.text_field :published_date, class: "form-control", placeholder: "例: 2024-01-01" %>
        <small class="form-text">YYYY-MM-DD形式で入力</small>
      </div>

      <div class="form-group half">
        <%= form.label :isbn, "ISBN", class: "form-label" %>
        <%= form.text_field :isbn, class: "form-control", placeholder: "ISBNコードを入力" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :description, "概要", class: "form-label" %>
      <%= form.text_area :description, class: "form-control", rows: 4, placeholder: "本の概要や説明を入力" %>
    </div>

    <div class="form-group">
      <%= form.label :image_url, "画像URL", class: "form-label" %>
      <%= form.text_field :image_url, class: "form-control", placeholder: "本の表紙画像のURLを入力（任意）" %>
      <small class="form-text">表紙画像のURLがあれば入力してください</small>
    </div>

    <div class="form-actions">
      <%= form.submit "本を追加", class: "btn btn-primary" %>
      <%= link_to "キャンセル", books_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
