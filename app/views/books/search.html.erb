<div class="container">
  <div class="header">
    <h1>本を検索</h1>
    <div class="header-actions">
      <%= link_to "読書記録一覧", readings_path, class: "btn btn-secondary" %>
      <%= link_to "手動で本を追加", new_book_path, class: "btn btn-outline-primary" %>
    </div>
  </div>

  <div class="search-form">
    <%= form_with url: search_books_path, method: :get, local: true, class: "search-form-inner" do |form| %>
      <%= form.label :query, "タイトル・著者名", class: "search-label" %>
      <div class="search-input-wrapper">
        <%= form.text_field :query, value: @query, placeholder: "例：吾輩は猫である", class: "search-input" %>
      </div>
      <%= form.submit "検索", class: "btn btn-primary" %>
    <% end %>
  </div>

  <% if @query.present? %>
    <div class="search-info">
      <p><strong>"<%= @query %>"の検索結果: <%= @books.size %>件</strong></p>
    </div>

    <% if @books.any? %>
      <div class="search-results">
        <% @books.each do |book| %>
          <div class="search-result-item">
            <div class="book-image">
              <% if book[:image_url].present? %>
                <img src="<%= book[:image_url] %>" alt="<%= book[:title] %>" class="book-cover">
              <% else %>
                <div class="no-image">No Image</div>
              <% end %>
            </div>

            <div class="book-info">
              <h3><%= book[:title] %></h3>

              <% if book[:author].present? %>
                <p class="author"><strong>著者：</strong> <%= book[:author] %></p>
              <% end %>

              <% if book[:publisher].present? %>
                <p class="publisher"><strong>出版社：</strong> <%= book[:publisher] %></p>
              <% end %>

              <% if book[:published_date].present? %>
                <p class="published-date"><strong>出版日：</strong> <%= book[:published_date] %></p>
              <% end %>

              <% if book[:isbn].present? %>
                <p class="isbn">
                  <strong>ISBN：</strong>
                  <%= book[:isbn] %>
                </p>
              <% end %>

              <% if book[:description].present? %>
                <div class="description">
                  <strong>概要：</strong>
                  <p class="description-text">
                    <%= truncate(book[:description], length: 200) %>
                  </p>
                </div>
              <% end %>
            </div>

            <div class="book-actions">
              <%= form_with url: create_from_google_books_books_path, method: :post, local: true, scope: :book, class: "add-book-form" do |f| %>
                <%= f.hidden_field :title, value: book[:title] %>
                <%= f.hidden_field :author, value: book[:author] %>
                <%= f.hidden_field :publisher, value: book[:publisher] %>
                <%= f.hidden_field :published_date, value: book[:published_date] %>
                <%= f.hidden_field :description, value: book[:description] %>
                <%= f.hidden_field :isbn, value: book[:isbn] %>
                <%= f.hidden_field :image_url, value: book[:image_url] %>
                <%= f.submit "この本を追加", class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="no-results">
        <h3>検索結果が見つかりませんでした</h3>
        <p>別のタイトルやキーワードで検索してみてください。</p>
      </div>
    <% end %>
  <% end %>
</div>

