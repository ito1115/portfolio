                <li class="page-item">
                  <%= link_to "Ê¨° ¬ª", search_books_path(query: @query, page: @pagination_info[:current_page] + 1),
                             class: "page-link" %>
                </li>
              <% else %>
                <li class="page-item disabled">
                  <span class="page-link">Ê¨° ¬ª</span>
                </li>
              <% end %>
            </ul>
          </nav>
        </div>
      <% end %>
