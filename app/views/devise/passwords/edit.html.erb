<div class="auth-container">
  <div class="auth-card">
    <div class="auth-logo">
      <h1>TSUNDOKU</h1>
    </div>

    <h2 class="auth-subtitle">新しいパスワードの設定</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, data: { turbo: false }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="auth-form-group">
        <%= f.label :password, "新しいパスワード", class: "auth-form-label" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "auth-form-input", placeholder: "6文字以上" %>
        <% if @minimum_password_length %>
          <p class="auth-hint"><%= @minimum_password_length %>文字以上で入力してください</p>
        <% end %>
      </div>

      <div class="auth-form-group">
        <%= f.label :password_confirmation, "新しいパスワード（確認）", class: "auth-form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "auth-form-input", placeholder: "パスワードを再入力" %>
      </div>

      <div>
        <%= f.submit "パスワードを変更", class: "auth-submit-btn" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= link_to "ログインに戻る", new_session_path(resource_name), class: "auth-link" %>
    </div>
  </div>
</div>
