<div class="auth-container">
  <div class="auth-card">
    <div class="auth-logo">
      <h1>TSUNDOKU</h1>
    </div>

    <% if notice.present? %>
      <div class="auth-notice"><%= notice %></div>
    <% end %>
    <% if alert.present? %>
      <div class="auth-alert"><%= alert %></div>
    <% end %>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
      <div class="auth-form-group">
        <%= f.label :email, "メールアドレス", class: "auth-form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "auth-form-input", placeholder: "example@email.com" %>
      </div>

      <div class="auth-form-group">
        <%= f.label :password, "パスワード", class: "auth-form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "auth-form-input", placeholder: "パスワードを入力" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="auth-checkbox-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "ログイン状態を保持する" %>
        </div>
      <% end %>

      <div>
        <%= f.submit "ログイン", class: "auth-submit-btn" %>
      </div>
    <% end %>

    <div class="auth-links">
      <%= link_to "新規登録はこちら", new_registration_path(resource_name), class: "auth-link" %>
      <% if devise_mapping.recoverable? %>
        <%= link_to "パスワードをお忘れですか？", new_password_path(resource_name), class: "auth-link" %>
      <% end %>
    </div>
  </div>
</div>
