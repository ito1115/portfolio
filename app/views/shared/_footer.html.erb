<footer class="site-footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-links">
        <%= link_to "お問い合わせ", footers_contact_form_path, class: "footer-link" %>
        <span class="footer-separator">|</span>
        <%= link_to "利用規約", footers_terms_path, class: "footer-link" %>
        <span class="footer-separator">|</span>
        <%= link_to "プライバシーポリシー", '#', class: "footer-link" %>
      </div>
      <div class="footer-copyright">
        <p>&copy; <%= Time.current.year %> Tsundoku. All rights reserved.</p>
      </div>
    </div>
  </div>
</footer>

<style>
.site-footer {
  background-color: #f8f9fa;
  border-top: 1px solid #e0e0e0;
  padding: 2rem 0;
  margin-top: 4rem;
}

.footer-content {
  text-align: center;
}

.footer-links {
  margin-bottom: 1rem;
}

.footer-link {
  color: #333;
  text-decoration: none;
  font-size: 0.9rem;
  transition: color 0.2s;
}

.footer-link:hover {
  color: #0d6efd;
  text-decoration: underline;
}

.footer-separator {
  margin: 0 0.75rem;
  color: #999;
}

.footer-copyright {
  margin-top: 0.5rem;
}

.footer-copyright p {
  margin: 0;
  color: #666;
  font-size: 0.85rem;
}
</style>
